@model IEnumerable<TestWebApp2.Backend.Entities.CurrencyRate>
@using JQChart.Web.Mvc

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/bundles/jqchart")

@(Html.JQChart()
          .Chart(Model)
          .ID("jqChart")
          .Height(600)
          .Title("Currencies Rates")
          .Animation(TimeSpan.FromSeconds(1))
          .Tooltips(el => el.TooltipsType(TooltipsType.Shared))
          .Axes(axis =>
                {
                    axis.DateTimeAxis(Location.Bottom)
                        .Labels(el => el.StringFormat("dd/mm"));
                })
          .Series(series =>
                  {
                      series.Line()
                            .Title("US Dollar")
                            .StrokeStyle("#418CF0")
                            .LineWidth(2)
                            .XValues(el => el.Date)
                            .YValues(el => (double)(el.Value));
                  })
          .Render())